<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.candyz.candyz.sugarbowl.SugarBowl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sugar_bowl_handle_on_drawer_id"
            android:layout_width="@dimen/sugar_bowl_handle_width"
            android:layout_height="match_parent"
            android:background="@drawable/sugar_bowl_handle"
            />

       <com.candyz.candyz.sugarbowl.Infinite2dScroller
            android:id="@+id/sugar_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.candyz.candyz.sugarbowl.Infinite2dScroller>

    </LinearLayout>


</FrameLayout>
